generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  profileId Int      @unique
  email     String   @unique
  nameFirst String
  nameLast  String
  userName  String   @unique
  posts     Post[]
  messages  Message[]
  // profile   Profile?   
}  

model Post { 
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Message {
  id        Int     @id @default(autoincrement())
  content   String
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

